<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_one_signin"
    tools:context=".TimetableAdd">

    <EditText
        android:id="@+id/day"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Day"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="226dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.150"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068"
        />



    <EditText
        android:id="@+id/lecture"
        android:layout_width="288dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Subject"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="226dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.300"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.268"
        />

    <EditText
        android:id="@+id/faculty_name"
        android:layout_width="288dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Faculty Name"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="226dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.480"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.368"
        />


    <EditText
        android:id="@+id/room_no"
        android:layout_width="288dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Class Room Number / Lab Name"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="226dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.680"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468"
        />

    <Button
        android:id="@+id/submitTimetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Submit"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.780"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.668" />

    <EditText
        android:id="@+id/lecture_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        android:hint="Time"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="127dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.180"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168"
        />


</androidx.constraintlayout.widget.ConstraintLayout>