<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddInformation"
    android:background="@drawable/background_image_one_signin"
    >


    <EditText
        android:id="@+id/zprn"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="number"
        android:hint="ZPRN"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="226dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.150"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068"
        />

    <EditText
        android:id="@+id/student_name"
        android:layout_width="288dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Name of Student"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="226dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168"
        />

    <EditText
        android:id="@+id/div"
        android:layout_width="288dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Division"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="226dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.300"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.268"
        />

    <EditText
        android:id="@+id/batch"
        android:layout_width="288dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Batch"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="226dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.480"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.368"
        />


    <EditText
        android:id="@+id/branch"
        android:layout_width="288dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Branch"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="226dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.680"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Submit"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.780"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.668" />

</androidx.constraintlayout.widget.ConstraintLayout>